<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/rv_shipping_element"
    android:orientation="horizontal"
    tools:context=".ui.shipping.ShippingFragment"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
        <TextView
            android:id="@+id/tv_shipping_id"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_sn"
            android:textSize="@dimen/cardView_default_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:textAlignment="center"
            android:text="@string/status_demo"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/tv_shipping_address"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:textSize="@dimen/cardView_default_text_size"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/tv_shipping_receiver_name"
            android:textSize="@dimen/cardView_default_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:textAlignment="center"
            android:text="@string/address_demo"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/tv_shipping_ordered_items"
            android:textSize="@dimen/cardView_default_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:textAlignment="center"
            android:text="@string/demo_2"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/tv_shipping_empty_bottles"
            android:textSize="@dimen/cardView_default_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:textAlignment="center"
            android:text="@string/status_demo"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/tv_shipping_status"
            android:textSize="@dimen/cardView_default_text_size"
            android:layout_width="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/status_demo"
            android:layout_weight="0.5"/>

    </LinearLayout>
