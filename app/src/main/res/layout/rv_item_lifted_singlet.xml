<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/rv_payment_element"
    android:orientation="horizontal"
    tools:context=".ui.payment.PaymentFragment"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
        <TextView
            android:id="@+id/tv_sn"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:text="S.N."
            android:layout_weight="0.56"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_product_id"
            android:textSize="@dimen/cardView_default_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:textAlignment="center"
            android:text="@string/status_demo"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/tv_vendor_id"
            android:textSize="@dimen/cardView_default_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:textAlignment="center"
            android:text="@string/address_demo"
            android:layout_weight="0.5"/>


        <TextView
            android:id="@+id/tv_product_type"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:textSize="@dimen/cardView_default_text_size"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>


        <TextView
            android:id="@+id/tv_product_variant"
            android:textSize="@dimen/cardView_default_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:textAlignment="center"
            android:text="@string/demo_2"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/tv_quantity"
            android:textSize="@dimen/cardView_default_text_size"
            android:layout_width="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/status_demo"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/tv_delivered"
            android:textSize="@dimen/cardView_default_text_size"
            android:layout_width="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/status_demo"
            android:layout_weight="0.5"/>


</LinearLayout>
